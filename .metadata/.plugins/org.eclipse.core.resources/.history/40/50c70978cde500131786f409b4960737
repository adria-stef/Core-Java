package com.hackbulgaria.problems;


import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Problems {

    public static boolean isOdd(int n) {

        if (n % 2 == 0) {
            return false;
        } else {
            return true;
        }

    }

    public static boolean isPrime(int n) {

        boolean isPrime = false;
        for (int i = 1; i < n / 2; i++) {
            if (n % i != 0) {
                isPrime = true;
            }
        }
        return isPrime;
    }

    public static int min(int... array) {
        int min = array[0];
        for (int i = 0; i < array.length; i++) {

            if (array[i] < array[0]) {
                min = array[i];

            }

        }
        return min;
    }

    public static int kthMin(int k, Integer[] array) {

        List<Integer> arr = Arrays.asList(array);
        int min = arr.get(0); 
        for (int j = 0; j < k; j++)
            for (int i = 0; i < arr.size(); i++) {
                //arr.get(j) 
                if (arr.get(i) < min) {
                    min = arr.get(i);
                }
             arr.remove(arr.get(j));
                        }
        return min;
    }

    // int getAverage(int[] array)

    public static void main(String[] args) {

        System.out.println(kthMin(3, bla));
        isOdd(3);
        isPrime(3);
        min(3, 4);
        Integer[] bla = new Integer[]{1, 2, 3};
        kthMin(3, bla);
    }

}
