package com.hackbulgaria.corejava.collections1;

import java.util.Stack;

public class CheckBrackets {

    public boolean startsWithOpening(String s) {
        if (s.startsWith("(")) {
            return true;
        } else {
            return false;
        }
    }

    public boolean endsWithClosing(String s) {
        if (s.endsWith(")")) {
            return true;
        } else {
            return false;
        }
    }

    public boolean equalNumberOfBrackets(String s) {

        Stack<Character> stackOfCharackters = new Stack<>();

        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == '(') {
                stackOfCharackters.push(s.charAt(i));
            } else if (s.charAt(i) == ')') {
                if(i != 0) {
                    stackOfCharackters.pop();
                } else {
                    return false;
                }
            } else {
                System.out.println("Invalid Input!!");
            }
        }
        
        return stackOfCharackters.isEmpty();
    }
