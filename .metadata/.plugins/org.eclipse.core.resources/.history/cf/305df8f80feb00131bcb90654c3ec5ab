package com.hackbulgaria.corejava.missingjoin;

import static org.junit.Assert.*;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class MissingJoinTestCase {

    private MissingJoin missingJoin = new MissingJoin();
    private Object[] strings = new Object[] {};

    public Object[] getLongString(Object... arrStrings) {
        for (int i = 0; i < arrStrings.length; i++) {
            if (!(arrStrings[i] instanceof String)) {
                arrStrings[i] = arrStrings[i].toString();
            }

        }
    return arrStrings;
    }
    
    @Before
    public void setUp() throws Exception {
        this.missingJoin = new MissingJoin();
        strings = new Object[] {};
        Object[] modifiedStrings = MissingJoin.getLongString(strings);
        
    }

    @After
    public void tearDown() throws Exception {
    }

    @Test
    public void standartTest() {

        assertEquals("bla blah", missingJoin.stichMeUp(" ", "bla", "blah"));
    
    }
}
